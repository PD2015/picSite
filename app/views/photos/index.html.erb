<p id="notice"><%= notice %></p>

<h1>Photos</h1>



<% @photos.each do |photo| %>
<%= image_tag photo.file, :width => '100%' if photo.file.present?%>
<p><%= photo.description%></p>
 <% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.description %></td>
        <td><%= photo.file %></td>
        <td><%= link_to 'Show', photos_path(photo) %></td>
        <td><%= link_to 'Edit', edit_admin_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photos_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_admin_photo_path %>
